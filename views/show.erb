<h1>Pirate</h1>

<div class="pirate">
  <h3>Name: <%=@pirate.name%></h3>
  <h3>Height: <%=@pirate.height%></h3>
  <h3>Weight: <%=@pirate.weight%></h3>
</div><br>

<h1>Ships</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p>
    <p>Type: <%= ship.type %></p>
    <p>Booty: <%= ship.booty %></p>
    <h2>Display your second ship here</h2>
    <h3>Name: <%= #@ships.last.name %></h3>
    <h3>Type: <%= #@ships.last.type %></h3>
    <h3>Booty: <%= #@ships.last.booty%></h3>
  </div>
<% end %>



